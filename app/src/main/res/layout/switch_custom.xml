<?xml version="1.0" encoding="utf-8"?>
<com.serchinastico.coolswitch.TargetFrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/disabled_view_foo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/enabled_view_foo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenTosca"
        android:orientation="horizontal"/>

</com.serchinastico.coolswitch.TargetFrameLayout>