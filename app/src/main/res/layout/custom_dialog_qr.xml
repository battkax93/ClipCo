<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="350dp"
    android:background="@drawable/bg_global_dialog"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="75"
        android:background="@drawable/round_layout_white_otp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_clipboard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_save_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/ic_save_black"
                android:padding="5dp"
                android:text="@string/save" />

            <Button
                android:id="@+id/btn_share_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/round_button"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_share_black"
                android:padding="5dp"
                android:text="@string/share" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>